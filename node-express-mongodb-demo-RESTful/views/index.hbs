<div class="row">
    <ol class="breadcrumb">
        <li><a href="http://localhost:3000">首页</a></li>
    </ol>
</div>
<div class="row">
    {{#each data}}
    <div class="col-md-2">
        <div class="thumbnail">
            <a href="/book/{{_id}}"><img src="{{ image_url }}" alt="{{title}}"></a>
            <h4>{{title}}</h4>
            <span onclick="deleteId('{{ _id }}')">删除</span>
            <a href="/update/{{ _id }}">修改</a>
        </div>
    </div>
    {{/each}}
</div>

<script>
    function deleteId(id) {
        $.ajax({
            url:"http://localhost:3000/book/"+id,
            type: "DELETE",
            success: function (res) {
                console.log(res);
                if( res.ok == 1 ) {
                    alert('删除成功');
                    window.location.href = 'http://localhost:3000/'
                }
            }
        })
    }
</script>
